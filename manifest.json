{
	"manifest_version": 3,
	"name": "Pixiv Downloader",
	"version": "1.0",
	"description": "Download images from Pixiv",
   	"host_permissions": [ "*://*/*" ],
	"permissions": [
		"storage",
		"downloads",
		"unlimitedStorage",
		"webRequest",
		"declarativeNetRequest",
		"notifications"
	],
	"icons": {
		"32": "images/pixiv-downloader-icon-32.png",
		"48": "images/pixiv-downloader-icon-48.png",
		"128": "images/pixiv-downloader-icon-128.png",
		"256": "images/pixiv-downloader-icon-256.png",
		"512": "images/pixiv-downloader-icon-512.png"
	},
	"action": {
		"default_popup": "popup/panel.html",
		"default_icon": {
			"32": "images/pixiv-downloader-icon-32.png",
			"48": "images/pixiv-downloader-icon-48.png",
			"128": "images/pixiv-downloader-icon-128.png",
			"256": "images/pixiv-downloader-icon-256.png",
			"512": "images/pixiv-downloader-icon-512.png"
		}
	},
	"declarative_net_request": {
		"rule_resources": [ {
			"enabled": true,
			"id": "referer-pixiv",
			"path": "rule.json"
		} ]
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.pixiv.net/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"content.css"
			]
		}
	]
}